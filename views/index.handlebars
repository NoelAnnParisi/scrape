<header class="bg-white black-80 tc pv4 avenir">
  <a href="" class="bg-black-80 ba b--black dib pa3 w2 h2 br-100">
    <svg class="white" data-icon="skull" viewBox="0 0 32 32" style="fill:currentcolor"><title>skull icon</title><path d="M16 0 C6 0 2 4 2 14 L2 22 L6 24 L6 30 L26 30 L26 24 L30 22 L30 14 C30 4 26 0 16 0 M9 12 A4.5 4.5 0 0 1 9 21 A4.5 4.5 0 0 1 9 12 M23 12 A4.5 4.5 0 0 1 23 21 A4.5 4.5 0 0 1 23 12"></path></svg>
  </a>
  <h1 class="mt2 mb0 baskerville i fw1 f1">Today's News</h1>
  <h2 class="mt2 mb0 f6 fw4 ttu tracked">Find the most current articles from the NY Times below</h2>
  <nav class="bt bb tc mw7 center mt4">
    <a class="f6 f5-l link bg-animate black-80 hover-bg-light-green dib pa3 ph4-l" href="/">Most Recent News</a>
    <a class="f6 f5-l link bg-animate black-80 hover-bg-light-blue dib pa3 ph4-l" href="/archives">Archived News</a>
    <a class="f6 f5-l link bg-animate black-80 hover-bg-light-green dib pa3 ph4-l" target="_blank" href="https://www.nytimes.com/">New York Times</a>
    <a class="f6 f5-l link bg-animate black-80 hover-bg-light-blue dib pa3 ph4-l" target="_blank" href="https://github.com/noelannparisi/scrape">Repo</a>
  </nav>
</header>
<div class="flex flex-row flex-wrap justify-around">
  {{#each result}}
    <article class="center mw5 mw6-ns hidden ba mv4">
      <h1 class="f4 bg-near-black white mv0 pv2 ph3">{{this.title}}</h1>
      <div class="pa3 bt">
        <p class="f6 f5-ns lh-copy measure mv0">
          <a target="_blank" href='{{{this.link}}}'>Click here for the full article</a>
        </p>
        <form action="/view" method="POST" class="pa4 black-80">
          <div>
            <label for="comment" class="baskerville f6 b db mb2">Comment here <span class="normal black-60">(optional)</span></label>
            <textarea id="comment" name="comment" class="db border-box hover-black w-100 measure ba b--black-20 pa2 br2 mb2" aria-describedby="comment-desc"></textarea>
            <input type="hidden" name="dbID" value="{{this._id}}" />
            <small id="comment-desc" class="tc bg-white f6 black-60 baskerville b">Please, be factual and kind.</small>
            <button class="baskerville fw6 f6 link dim br3 ba bw1 ph3 mt1 pv2 mb2 db black">Submit</button>
          </div>
        </form>
        <div class="scrollbox">
          <h2 class="tc baskerville i underline fw3">{{this.comment.length}} comments below</h2>
          {{#each this.comment}}
            <div class="list pl0 ma2">
              <div class="pa3 pa2-ns bb b--black-10">
                <span class="baskerville f5 db lh-copy measure">{{counter @index}}) {{this}}</span>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </article>
  {{/each}}
</div>
